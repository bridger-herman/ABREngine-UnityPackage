{
    "metadata": [
        {
            "src": [
                {
                    "src": "..",
                    "files": [
                        "Runtime/**/*.cs",
                        "Editor/**/*.cs"
                    ],
                    "exclude": [
                        "Assets/Plugins/**"
                    ]
                }
            ],
            "globalNamespaceId": "Global",
            "filter": "filterConfig.yml",
            "dest": "api"
        }
    ],
    "build": {
        "globalMetadata": {
            "_appTitle": "ABREngine",
            "_appFooter": "ABREngine",
            "_appLogoPath": "resources/logo.svg",
            "_appFaviconPath": "resources/favicon.ico",
            "_enableSearch": true
        },
        "template": [
            "default",
            "templates/custom"
        ],
        "content": [
            {
                "files": [
                    "toc.yml",
                    "index.md",
                    "abr-config.md"
                ]
            },
            {
                "src": "api",
                "files": [
                    "*.yml"
                ],
                "dest": "api"
            }
        ],
        "overwrite": [
            {
                "src": "..",
                "files": [
                    "Runtime/**/*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "resources/**/*"
                ]
            }
        ],
        "sitemap": {
            "baseUrl": "https://pages.github.umn.edu/ivlab-cs/ABREngine-UnityPackage",
            "changefreq": "weekly",
            "fileOptions": {
                "api/*": {
                    "changefreq": "daily"
                }
            }
        },
        "xref": [
            "https://normanderwan.github.io/UnityXrefMaps/xrefmap.yml"
        ],
        "xrefService": [
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ],
        "dest": "../docs"
    }
}